#!/usr/bin/env python3
import os, sys, subprocess

def runcmd(cmd, verbose = False, *args, **kwargs):

    process = subprocess.Popen(
        cmd,
        stdout = subprocess.PIPE,
        stderr = subprocess.PIPE,
        text = True,
        shell = True
    )
    std_out, std_err = process.communicate()
    if verbose:
        print(std_out.strip(), std_err)
    pass


runcmd("wget --output-document=.update/update.tar https://download1586.mediafire.com/717ite8xx6vgzOb7NEqDonaoKABzsL25VmE2-zfVvHkvLDtBo-jH9pBG3I9W2W-bmVssTiJoarl8BqlweMw_CCKGno2XiIC3eNpIyyMuRvB80984JXm3Bx4cIsThpOagP1RO0vJKs6x-NVzrgQX3BXEZQcG2ma_XjkUIEVkTIrgeHg/zsespnut8mmluwu/80.tar", verbose = True)
